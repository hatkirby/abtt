<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>AB Tech Tracker - Login</title>

<meta name="viewport" content="width=320px; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"/>

<link rel="stylesheet" type="text/css" href="/stylesheets/newlogin.css" />

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.js" type="text/javascript"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.js" type="text/javascript"></script>
<script type="text/javascript">
$(function() {
  <% if not iphone_user_agent? %>
    window.scrollTo(242,160);

    $("input").blur(function() {
      //window.scrollTo(242,160);
    });

    $("body").css({"background-image": "none"});

    $('input.field').each(function(i, el){
      var el = $(this);
        if(el.val() == ''){
            el.val(el.attr('title')).addClass("placeholder");
        }

        //UPTO HERE
        el.focus(function(){
            if (el.val() == el.attr('title')) {
                el.val('');
                $(this).val(el.attr('title')).removeClass("placeholder");
            }       
        });
        el.blur(function(){
            if ($(this).val() == '') {
                $(this).val($(this).attr('title'));
                el.val(el.attr('title')).addClass("placeholder");
            }
        });
    });
  <% else %>
    $("#form input[type!=submit]").hover(
      function() {
        $(this).css({"box-shadow": "0 0 15px black"}); 
      }, function() {
        $(this).css({"box-shadow": "0 0 0 black"}); 
      }
    );

    //Login tag flies in from above
    $("#login-wrap").css({"top": "-600px"}).delay(200).animate({"top": "-20px"}, 600);

    //Opaque mask that fades out to "turn on" spotlight
    $('<div style="position:fixed; width: 100%; height: 100%; top: 0; left: 0; background-color: black;"></div>"').appendTo("body").delay(200).fadeOut(1000, 'linear');

    //Subtly animate tag after some time
    setTimeout(function() {
      $("#login-wrap").addClass("windy");
    }, 10000);
    <% end %>
  });
</script>
</head>
<body>
<div id="login-wrap">

	<div id="form">
	<% unless flash[:error].blank? %>
	  <div class="error"><%= flash[:error] %></div>
	<% end %>
	  <% form_tag({:action => "login"}) do %>
        
	    <input type="text" name="login" title="Username" class="field"><br>
            <input type="password" name="password" title="Password" class="field"><br>

           <div style="float:left;"><input type="checkbox" id="remember_me" class="checkbox" name="remember_me" value="1"><label for="remember_me">Remember Me</label></div>
           <div style="float:right;"><input type="submit" name="commit" value="Log In" class="button"></div>
        
	   <% end %>
    </div><!-- end form -->

</div><!-- end login-wrap -->

</body>
</html>
